<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:richtexteditor="sap.ui.richtexteditor"
	xmlns:mvc="sap.ui.core.mvc">
	<mvc:View id="_IDGenView1"
		core:require="{ handler: 'com/demo/wikipagemanager/ext/fragment/EditorUsingFragment'}">
		<l:VerticalLayout id="editorLayoutContainer"
			class="sapUiContentPadding"
			width="100%">
			<richtexteditor:RichTextEditor id="_IDGenRichTextEditor1"
				width="100%"
				height="500px"
				customToolbar="true"
				value="{content}"
				visible="{ui>/isEditable}"
				editable="true"
				buttonGroups="[]"
				required="true"
				ready="handler.onEditorReady">
			</richtexteditor:RichTextEditor>
			<FormattedText id="_IDGenFormattedText1"
				htmlText="{content}"
				visible="{= !${ui>/isEditable}}"/>
		</l:VerticalLayout>
	</mvc:View>
</core:FragmentDefinition>

